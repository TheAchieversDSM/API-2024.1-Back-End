{
  "compilerOptions": {
    /* Projects */

    /* Language and Environment */
    "target": "es2017",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,               

    /* Modules */
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      

    /* Completeness */                    
    "skipLibCheck": true                                 
  },
  "include": ["src", "__tests__", "test"]
}
